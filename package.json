{
  "name": "@peardeck/peardeck-uikit",
  "description": "The Pear Deck UI kit",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "author": "Pear Deck",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx}\"",
    "build": "lerna run build ",
    "storybook": "lerna run watch --scope @peardeck-uikit/storybook",
    "start": "yarn run build && yarn run storybook"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lerna run --concurrency 1 --stream precommit"
    }
  }
}
